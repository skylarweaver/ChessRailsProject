<h2>Active Curriculums</h2>

<% if @curriculums.size > 0 %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ratings</th>
      <th>Times Used</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @curriculums.each do |curriculum| %>
      <tr>
        <td><%= link_to "#{curriculum.name}", curriculum %></td>
        <td><%= "#{curriculum.min_rating > 0 ? curriculum.min_rating : "Unrated"} - #{curriculum.max_rating}" %></td>
        <td><%= curriculum.camps.count %></td>
        <td ><%= link_to 'Edit', edit_curriculum_path(curriculum), class: "button tiny radius" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

    <span class="paginate">
    <%= will_paginate @curriculums, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
    </span>
<%else%>
  <br>
  <h5>There are no active curriculums in the system</h5>
<%end%>
<br>

<br> <br>
<h2>Inactive Curriculums</h2>

<% if @inactiveCurriculums.size > 0 %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ratings</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @inactiveCurriculums.each do |curriculum| %>
      <tr>
        <td><%= link_to "#{curriculum.name}", curriculum %></td>
        <td><%= "#{curriculum.min_rating > 0 ? curriculum.min_rating : "Unrated"} - #{curriculum.max_rating}" %></td>
        <td ><%= link_to 'Edit', edit_curriculum_path(curriculum), class: "button tiny radius" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

    <span class="paginate">
    <%= will_paginate @curriculums, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
    </span>

<%else%>
  <br>
  <h5>There are no inactive curriculums in the system</h5>
<%end%>

<br><br>
<%= link_to 'New Curriculum', new_curriculum_path, class: "button round radius"%>
