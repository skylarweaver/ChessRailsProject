<h2>Active Curriculums</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ratings</th>
      <th>Times Used</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @curriculums.each do |curriculum| %>
      <tr>
        <td><%= link_to "#{curriculum.name}", curriculum %></td>
        <td><%= "#{curriculum.min_rating > 0 ? curriculum.min_rating : "Unrated"} - #{curriculum.max_rating}" %></td>
        <td><%= curriculum.camps.size %></td>
        <td ><%= link_to 'Edit', edit_curriculum_path(curriculum), class: "button tiny radius" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

    <span class="paginate">
    <%= will_paginate @curriculums, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
    </span>
<br>

<br> <br>
